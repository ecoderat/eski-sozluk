{{define "base"}}
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<title>{{template "title" .}} - EskiSözlük</title>
<link rel='stylesheet' href='/static/css/reset.css'>
<link rel='stylesheet' href='/static/css/main.css'>

</head>

<body>
    <div class="container">
        <div class="left">
            <div class="list">
                <h2 id="list-id">gündem</h2>
                    <ul>
                        {{template "list" .}}
                    </ul>
            </div>
            <div class="left-footer">
                {{template "footer" .}}
            </div>
        </div>
        <div class="right">
            <div class="entry">
                {{template "entry" .}}
            </div>

            <div class="new-entry">
                <p>bu konuda eklemek istediğiniz bir şey varsa neden olmasın..</p>

                <form action="/action_page.php">
                <label for="fname">nickiniz:</label>
                <input type="text" id="fname" name="fname">
                <label for="pwd">şifresi:</label>
                <input type="password" id="pwd" name="pwd">
                <label for="lname">bildikleriniz:</label>
                <textarea name="message" rows="10" cols="30"></textarea> 
                <br><br>
                <input type="submit" value="yolla">
                <div class="clear"></div>
                </form> 
                
            </div>
            <div class="right-footer">
                {{template "footer" .}}
                <div class="clear"></div>
            </div>
        </div>
    </div>
</body>

</html>
{{end}}